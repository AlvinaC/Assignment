<resources>

    <!-- Base Content application theme. -->
    <style name="AppThemeContent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/intro_page_indicator_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="navigationIcon">@drawable/backarrow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/intro_page_indicator_dark</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorPrimary">@color/intro_page_indicator_dark</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@color/intro_page_indicator_dark</item>
        <item name="android:textColor">@color/intro_page_indicator_dark</item>
    </style>

    <!--Dashboard sliding menu item style-->
    <style name="sliding_menu_item">
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textColor">@color/intro_page_indicator_dark</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textStyle">normal</item>-->
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/intro_page_indicator_dark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Button styles-->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/intro_page_indicator_dark</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>
</resources>
